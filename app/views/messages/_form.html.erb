<%= form_for(@message) do |f| %>
  <div class="form-group">
        <%if @message.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
              <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
              <% end %>
            </ul>
          </div>
          <% end %>
    </div>
    <div class="form-group>
      <label for="message_name">名前：</label>
      <%= f.text_field :name, class:"form-control", placeholder:"お名前" %>
    </div>
    
    <div class="form-group">
      <label for="message_body">内容：</label>
      <%= f.text_area :body, class:"form-control", placeholder:"内容" %>
    </div>
    
      <%= f.submit class: "btn btn-default" %>
      <% end %>
  </div>