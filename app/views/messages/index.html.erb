<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
    <% end %>
  </div>
</div>


  <div class="form-group">
      <%= form_for(@message) do |f| %>
        <%if @message.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
              <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
              <% end %>
            </ul>
          </div>
          <% end %>
      
      <label for="exampleInputName">名前：</label>
      <%= f.text_field :name, class:"form-control", placeholder:"お名前" %>

      <label for="exampleInputText">内容：</label>
      <%= f.text_area :body, class:"form-control", placeholder:"内容" %>
      <%= f.submit class: "btn btn-default" %>
      <% end %>
      
  </div>


